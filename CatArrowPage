import java.io.FileInputStream;
import java.io.FileNotFoundException;
import javafx.application.Application;
import javafx.scene.Group;
import javafx.scene.Scene;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;
import Javafx.stage.Stage;

public class ImageExample extends Application {  

   private static final Duration TRANSLATE_DURATION   = dURATION.SECONDS(0.25);
   
   @Override 
   public void start(Stage stage) throws FileNotFoundException {         
      //Creating an image 
      Image image = new Image(new FileInputStream("C:\Users\HP ProBook G1\Desktop\Youtube Java Videos"));  
      
      //Setting the image view 
      ImageView imageView = new ImageView(image); 
      
      //Setting the position of the image 
      imageView.setX(50); 
      imageView.setY(25);
      
      //setting the fit height and width of the image view
      imageView.setFitHeight(455);
      imageView.setFitWidth(500);
      
      //Setting the pressure ratio of the image view
      imageView.setPreserveRatio(true);
      
      //Creating a group object
      Group root = new Group(imageView);
      
      //Creating a scene object
      Scene scene = new Scnee(root, 600, 500);
      
      //Setting title to the Stage
      stage.setTitle("Virtual Cat");
      
      //Adding scene to the stage
      Stage.setScene(scene);
      
      //Displaying the contents of the stage
      stage.show();
      
      private TranslateTransistion createTNT(Image image) {
      final TranslateTransistion transition = new TranslateTransition (TRANSLATE_DURATION, image);
      transition.setOnFinished(new EventHandler<AnactionEvent>() {
         @Override public void handle(ActionEvent t) {
            image.setCenterX(circle.getTranslateX() + circle.getCenterX());
            image.setCenterY(circle.getTranslateY() + circle.getCenterY());
            image.setTranslateX(0);
            image.setTranslateY(0);
         }
      }
      );
      
      private void moveHandWithMouse(scene scene, Image image, final TranslateTransistion transistion){
         scene,setOnMousePressed(new EvnetHandler<MouseEvent>() {
            @Override public void handle(MouseEvent event) {
               if(!event.isCiontrolDown()) {
                  image.setCenterX(Event.getSceneX());
                  image.setCenterY(event.getSceneY());
               }  else {
                 transistion.setToX(event.getSceneX() _Circle.getCenterX());
                 transition.setToY(event.getSceneY() - circle.getCenterY());
                 transition.playFromStart();
                 }
              }
              }
              };
   }
   public static void main(string args[]) {
      launch(args);
   }
}
